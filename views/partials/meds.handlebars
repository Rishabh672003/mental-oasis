<form id="medication-form">
  <label class="med" for="medication-name">Medicine:</label>

  <div class="meds" id="user-data" data-user-id="{{id}}">
    <div id="medication-list">
      <!-- The list of habits will be added here -->
      {{#each medicine.medicine_input as |medication|}}
      <input type="checkbox"> {{medication}}</input>
      <br>
      {{/each}}
    </div>
    <input class="add" type="text" id="medication-name" name="medication-name" />
    <button type="button" id="add-medication-button">Add Medication</button>
  </div>
</form>
