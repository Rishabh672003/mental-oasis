<section
{{!-- adding a background image using bulma --}}
  class="section is-background is-fullheight"
  style="background-image: url('./images/colorful.png'); background-size: cover;"
>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="login-box">
          <h1 class="title has-text-centered">Login Screen</h1>
          <form class="login-form">
            <div class="field">
              <label class="label">Email</label>
              <div class="control">
                <input
                  class="input"
                  type="email"
                  id="email-login"
                  placeholder="Enter your email"
                />
              </div>
            </div>
            <div class="field">
              <label class="label">Password</label>
              <div class="control">
                <input
                  class="input"
                  type="password"
                  id="password-login"
                  placeholder="Enter your password"
                />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button
                  class="button is-primary is-fullwidth login"
                >Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
{{!-- connecting corresponding js --}}
<script src="./js/login.js"></script>